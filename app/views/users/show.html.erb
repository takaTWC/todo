
<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-12">
      <h2 class="text-center">マイページ</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <h4>投稿</h4>
      <%= form_with model: @list, html: { class: 'form-group' } do |f| %>
        <div class="mb-3">
          <label for="list_title" class="form-label">タイトル</label>
          <%= f.text_field :title, id: 'list_title', class: 'form-control' %>
        </div>

        <div class="mb-3">
          <label for="list_body" class="form-label">内容</label>
          <%= f.text_area :body, id: 'list_body', class: 'form-control', rows: 3 %>
        </div>

        <%= f.submit '投稿', class: 'btn btn-primary' %>
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="mb-4">
        <h4>未</h4>
        <%= render 'lists_table', lists: @lists.reject(&:is_complete) %>
      </div>

      <div>
        <h4>済</h4>
        <%= render 'lists_table', lists: @lists.select(&:is_complete) %>
      </div>
    </div>
  </div>
</div>