<div class="container">
  <div class="row">
    <h2>マイページ</h2>
  </div>
  <div class="row">
    <div class="col-6">
      <h4>投稿</h4>
      <%= form_with model: @list, html: { class: 'form-group' } do |f| %>
        <div class="mb-3">
          <label for="list_title" class="form-label">タイトル</label>
          <%= f.text_field :title, id: 'list_title', class: 'form-control' %>
        </div>

        <div class="mb-3">
          <label for="list_body" class="form-label">内容</label>
          <%= f.text_area :body, id: 'list_body', class: 'form-control', rows: 3 %>
        </div>

        <%= f.submit '投稿', class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-6">
      <h4>未</h4>
      <table class="table">
        <thead>
          <tr>
            <th>追加日</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @lists.select { |list| !list.is_complete }.each do |list| %>
            <tr>
              <td><%= list.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              <td><%= link_to list.title, list_path(list) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h4>済</h4>
      <table class="table">
        <thead>
          <tr>
            <th>追加日</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @lists.select { |list| list.is_complete }.each do |list| %>
            <tr>
              <td><%= list.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              <td><%= link_to list.title, list_path(list) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>